extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered.table-striped
				thead
					tr
						th 电影名字
						th 导演
						th 国家
						th 上映年份
						th 录入时间
						th 浏览数
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td= item.title
							td #{item.director}
							td #{item.country}
							td #{item.year}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td #{item.pv}
							td: a(target="_blank", href="/movie/#{item._id}") 查看
							td: a(target="_blank", href="/admin/movie/update/#{item._id}") 修改
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
			
			ul.pagination(style="margin:0 auto; width:200px;display: inline;")
				- for(var i = 0; i<totalPage; i++){
					- if(currentPage == (i+1)){
						li.active
							span #{currentPage}
					- }else{
						li
							a(href="/admin/movie/list?&p=#{i}") #{i + 1}
					- }
				- }
			
	script(src="/js/admin.js")