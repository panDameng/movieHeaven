extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
				.panel.panel-default
					.panel-heading
						h3 评论区
					.panel-body
						ul.media-list
							each item in comments
								li.media
									.pull-left
										//页面跳到锚点出   挺不错的页面内跳转技术。
										a#comment.comment(href="#comments", data-cid="#{item._id}", data-tid="#{item.from._id}")
											img.media-object(src="/upload/head-portrait/#{item.from.head}", style="width:64px; height:64px;")
									.media-body
										h4.media-heading #{item.from.name}
										P #{item.content}
										if item.reply && item.reply.length > 0
											each reply in item.reply
												.media
													.pull-left
														//页面跳到锚点出   挺不错的页面内跳转技术。
														a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{reply.from._id}")
															img.media-object(src="/upload/head-portrait/#{reply.from.head}", style="width:64px; height:64px;")
													.media-body
														h4.media-heading 
															| #{reply.from.name}
															span.text-info &nbsp;回复&nbsp;
															| #{reply.to.name}:
														P #{reply.content}
									hr
						//增加锚点，点击上面跳至此
						#comments
							form#commentForm(method="POST",action="/user/comment")
								input(type="hidden", name="comment[movie]", value="#{movie._id}")
								if user
									input(type="hidden", name="comment[from]", value="#{user._id}")
									.form-group
										textarea#commentTextarea.form-control(name="comment[content]", row="3")
								if user
									button#submitComment.btn.btn-primary(type='submit') 提交 
								else
									a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.director
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary
	script(src="/js/detail.js")